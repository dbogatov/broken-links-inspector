{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha All",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-r",
				"ts-node/register",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceFolder}/test/**/*.ts",
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"protocol": "inspector"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Index",
			"program": "${workspaceFolder}/dist/index.js",
			"args": [
				"inspect",
				"https://dbogatov.org",
				"-r",
				"-t",
				"100",
				"--ignore-prefixes",
				"m,l",
				"--accept-codes",
				"444,555"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"protocol": "inspector",
			"preLaunchTask": "build",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"]
		}
	]
}
